body
  font-family 'Raleway', sans-serif
  color #555

a
  text-decoration none
  color #09c

  &:hover
    color #000

select
  background url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='50px' height='50px'><polyline points='46.139,15.518 25.166,36.49 4.193,15.519'/></svg>");
  background-repeat no-repeat
  background-color #fff
  color #111
  background-position right 10px top 15px
  background-size 16px 16px
  padding 12px
  width auto
  font-weight bold
  text-align center
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
  border-radius 3px
  -webkit-border-radius 3px
  -webkit-appearance  none
  border 0
  outline 0
  -webkit-transition 0.3s ease all
     -moz-transition 0.3s ease all
      -ms-transition 0.3s ease all
       -o-transition 0.3s ease all
          transition 0.3s ease all

.wrapper
  width 1140px
  margin 0 auto

.front-header
  background url('../images/welcome-hands.jpg')
  background-size 100% 100%
  overflow hidden

.front-header:before
  content ' '
  display block
  width 100%
  height 100%

  .header
    margin-top 20px

.inner-header
  background #37464F

  .header
    padding-bottom 20px

.header
  padding-top 20px

  .logo
    float left
    margin 0 0 0 40px
    padding 0
    font-size 40px
    text-transform uppercase
    text-shadow 1px 1px 1px rgba(0,0,0,0.4)

    a
      color #fff

    img
      vertical-align middle

  nav
    float right
    margin-right 40px

    ul
      margin 0
      padding 0
      list-style-type none

    li
      float left
      list-style-type none
      margin-right 30px
      font-size 20px

      a
        color #fff

        &:hover, &.active
          color #f1c40f


.welcome
  padding-top 70px
  margin-bottom 50px
  color #fff
  text-align center
  text-shadow 1px 1px 1px rgba(0,0,0,0.4)

  h3
    font-family Lato, sans-serif
    font-size 100px
    margin-bottom -40px
    margin-top -10px

  p
    font-family Lato, sans-serif
    font-size 50px

.main
  background #eee

.filter-container
  background #09c

  .filter
    text-align center
    padding 20px 0
    color #fff
    font-size 20px

    .filter-item
      background #fff
      border-radius 50px
      display inline-block
      margin 0 10px
      width 80px
      height 80px
      line-height 80px
      font-size 12px
      -webkit-transition all 0.2s linear
      -moz-transition all 0.2s linear
      -ms-transition all 0.2s linear
      -o-transition all 0.2s linear
      transition all 0.2s linear
      color #111

      &.active, &:hover
        -webkit-transform scale(1.2)
        -moz-transform scale(1.2)
        -ms-transform scale(1.2)
        -o-transform scale(1.2)
        transform scale(1.2)


.activities
  margin-top 30px
  overflow hidden

.activity
  float left
  margin-right 25px
  margin-bottom 15px
  background #fff

  .image-container
    width 250px
    height 200px
    overflow hidden
    position relative

    &:hover
      .zoom
        -webkit-transform scale(1.2)
        -moz-transform scale(1.2)
        -ms-transform scale(1.2)
        -o-transform scale(1.2)
        transform scale(1.2)

    .zoom
      -webkit-transition all 0.2s ease-in-out
      -moz-transition all 0.2s ease-in-out
      -ms-transition all 0.2s ease-in-out
      -o-transition all 0.2s ease-in-out
      transition all 0.2s ease-in-out

  .cat
    position absolute
    bottom 10px
    right 10px
    color #fff
    text-shadow 1px 1px 1px rgba(0,0,0,0.4)
    font-size 80%

  .description
    width 250px
    height 150px

  .title
    margin 0
    padding 4px 0px

    a
      color #222

  .ctry
    float left
  .org
    float right 

  .meta-item
    img
      width 60px
      height 38px

.content
  margin-bottom 20px
  overflow hidden

  h1.title
    color #c0392b
    border-bottom 1px solid #ddd

  .meta
    float right
    background #fff
    width 400px

    h3
      background #2980b9
      color #fff
      padding 4px 2px
      margin 0

    p
      padding 4px 2px


.footer-container
  background #37464F
  color #89949B

  .footer
    text-align right
    padding 30px 0
